{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "BlaizeJS Library",
  "extends": "./node.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "stripInternal": true,
    "noEmitOnError": true,
    "moduleResolution": "bundler",
    "module": "ESNext",
    "types": ["vitest/globals", "node"],
    "verbatimModuleSyntax": false,
    "emitDeclarationOnly": true
  }
}
