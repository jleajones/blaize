{
  "extends": "@blaizejs/tsconfig/library.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "../../packages",
    "tsBuildInfoFile": "./.tsbuildinfo",
    "exactOptionalPropertyTypes": false,
    "baseUrl": ".",
    "paths": {
      "@router/*": ["./src/router/*"],
      "@/*": ["./src/*"]
    }
  },
  "references": [{ "path": "../../packages/blaize-types" }],
  "include": ["src/**/*.ts", "../../blaize-types/src/index.ts"],
  "exclude": ["node_modules", "dist", "dist/**/*"]
}
