{
  "name": "blaizejs",
  "version": "0.1.0",
  "description": "A blazing-fast, type-safe Node.js framework with file-based routing, powerful middleware, and end-to-end type safety",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "tsup --watch --onSuccess \"node examples/basic.ts\"",
    "build": "tsup",
    "build:watch": "tsup --watch",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint .",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@blaizejs/eslint-config": "workspace:*",
    "@blaizejs/tsconfig": "workspace:*",
    "@blaizejs/tsup-config": "workspace:*",
    "@blaizejs/vitest-config": "workspace:*",
    "@types/node": "^22.15.17",
    "@vitest/coverage-v8": "^3.1.3",
    "vitest": "^3.1.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "nodejs",
    "framework",
    "typescript",
    "http",
    "http2",
    "server",
    "file-based-routing",
    "middleware",
    "plugins",
    "type-safe"
  ],
  "license": "MIT"
}
