{
  "extends": "@blaizejs/tsconfig/library.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "../../packages",
    "tsBuildInfoFile": "./.tsbuildinfo",
    "exactOptionalPropertyTypes": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "references": [{ "path": "../blaize-types" }],
  "include": ["src/**/*.ts", "../blaize-types/src/**/*.ts"],
  "exclude": ["node_modules", "dist", "dist/**/*", "../blaize-types/dist/**/*"]
}
