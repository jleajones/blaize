{
  "extends": "@blaizejs/tsconfig/library.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "../../packages",
    "lib": ["ES2022", "DOM"],
    "tsBuildInfoFile": "./.tsbuildinfo",
    "exactOptionalPropertyTypes": false,
    "baseUrl": ".",
    "paths": {
      "@blaize-types/*": ["../blaize-types/src/*"]
    }
  },
  "include": ["package.json", "src/**/*.ts", "../blaize-types/src/**/*.ts"],
  "exclude": ["node_modules", "dist", "dist/**/*"]
}
