{
  "extends": "@blaizejs/tsconfig/test.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "../../packages",
    "lib": ["ES2022", "DOM"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "exactOptionalPropertyTypes": false,
    "baseUrl": ".",
    "paths": {
      "@blaize-types/*": ["../blaize-types/src/*"]
    }
  },
  "include": ["src/**/*", "../blaize-types/src/**/*.ts"],
  "exclude": ["node_modules", "dist", "examples"]
}
