{
  "name": "create-blaize-app",
  "version": "0.1.0",
  "description": "Create BlaizeJS applications with zero configuration in under 60 seconds",
  "author": "J.Lea-Jones <jason@careymarcel.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/jleajones/blaize.git",
    "directory": "packages/create-blaize-app"
  },
  "homepage": "https://github.com/jleajones/blaize/tree/main/packages/create-blaize-app#readme",
  "bugs": {
    "url": "https://github.com/jleajones/blaize/issues"
  },
  "bin": {
    "create-blaize-app": "./dist/index.js"
  },
  "type": "module",
  "main": "./dist/index.js",
  "files": [
    "dist",
    "templates"
  ],
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "type-check": "tsc --noEmit",
    "test": "vitest run --typecheck",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint .",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "boxen": "^8.0.1",
    "chalk": "^5.6.0",
    "fs-extra": "^11.3.1",
    "minimist": "^1.2.8",
    "ora": "^8.2.0",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@blaizejs/eslint-config": "workspace:*",
    "@blaizejs/tsconfig": "workspace:*",
    "@blaizejs/tsup-config": "workspace:*",
    "@blaizejs/vitest-config": "workspace:*",
    "@types/fs-extra": "^11.0.4",
    "@types/minimist": "^1.2.5",
    "@vitest/coverage-v8": "^3.1.3",
    "memfs": "^4.36.3",
    "vitest": "^3.1.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "blaizejs",
    "create-app",
    "cli",
    "scaffold",
    "typescript",
    "nodejs",
    "framework",
    "zero-config"
  ],
  "license": "MIT"
}
