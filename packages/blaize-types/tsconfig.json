{
  "extends": "@blaizejs/tsconfig/library.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "tsBuildInfoFile": "./.tsbuildinfo",
    "emitDeclarationOnly": true,
  },
  "include": [
    "src/index.ts",
    "src/server.ts",
    "src/context.ts",
    "src/middleware.ts",
    "src/plugins.ts",
    "src/router.ts",
    "src/client.ts"
  ],
  "exclude": ["node_modules", "dist/*.d.ts"]
}
