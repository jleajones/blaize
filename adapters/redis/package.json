{
  "name": "@blaizejs/adapter-redis",
  "version": "1.0.0",
  "description": "Redis adapter for BlaizeJS",
  "author": "BlaizeJS Contributors",
  "repository": {
    "type": "git",
    "url": "https://github.com/jleajones/blaize.git",
    "directory": "adapters/redis"
  },
  "homepage": "https://github.com/jleajones/blaize/tree/main/adapters/redis#readme",
  "bugs": {
    "url": "https://github.com/jleajones/blaize/issues"
  },
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "src/lua",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "type-check": "tsc --noEmit",
    "test": "vitest run --typecheck",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint .",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "ioredis": "^5.8.2",
    "zod": "^3.24.4"
  },
  "peerDependencies": {
    "blaizejs": "^0.8.0"
  },
  "devDependencies": {
    "blaizejs": "workspace:*",
    "@blaizejs/plugin-cache": "workspace:*",
    "@blaizejs/eslint-config": "workspace:*",
    "@blaizejs/testing-utils": "workspace:*",
    "@blaizejs/tsconfig": "workspace:*",
    "@blaizejs/tsup-config": "workspace:*",
    "@blaizejs/vitest-config": "workspace:*",
    "@vitest/coverage-v8": "^3.1.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.1.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "blaizejs",
    "adapter",
    "redis",
    "eventbus",
    "cache",
    "queue",
    "circuit-breaker",
    "distributed",
    "typescript"
  ],
  "license": "MIT"
}
