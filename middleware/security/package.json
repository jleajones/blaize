{
  "name": "@blaizejs/middleware-security",
  "version": "1.0.0",
  "description": "Production-ready security middleware for BlaizeJS",
  "author": "J.Lea-Jones <jason@careymarcel.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/jleajones/blaize.git",
    "directory": "middleware/security"
  },
  "homepage": "https://github.com/jleajones/blaize/tree/main/middleware/security#readme",
  "bugs": {
    "url": "https://github.com/jleajones/blaize/issues"
  },
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "type-check": "tsc --noEmit",
    "test": "vitest run --typecheck",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint .",
    "clean": "rimraf dist"
  },
  "peerDependencies": {
    "blaizejs": "^0.6.0"
  },
  "devDependencies": {
    "blaizejs": "workspace:*",
    "@blaizejs/eslint-config": "workspace:*",
    "@blaizejs/testing-utils": "workspace:*",
    "@blaizejs/tsconfig": "workspace:*",
    "@blaizejs/tsup-config": "workspace:*",
    "@blaizejs/vitest-config": "workspace:*",
    "@vitest/coverage-v8": "^3.1.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.1.3",
    "zod": "^3.24.4"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "blaizejs",
    "security",
    "middleware",
    "csp",
    "hsts",
    "security-headers",
    "xss",
    "content-security-policy"
  ],
  "license": "MIT"
}
